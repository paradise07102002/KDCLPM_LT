<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:id="@+id/mts_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/icon_book_shelf"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mts1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Mã mượn trả: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_mts2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tên sách mượn: "
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mts3"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã sách" />

        <TextView
            android:id="@+id/tv_mts4"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách" />
    </LinearLayout>
</LinearLayout>